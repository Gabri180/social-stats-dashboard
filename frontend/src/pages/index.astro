---
// frontend/src/pages/index.astro
import Layout from '../layouts/MainLayout.astro';
---

<Layout title="Home">
  <div class="min-h-screen bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600">
    <nav class="container mx-auto px-6 py-8 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-white">SocialStats</h1>
      <div class="flex gap-4">
        <a href="/login" class="px-6 py-2 text-white hover:bg-white/10 rounded-lg transition-colors font-semibold">
          Login
        </a>
        <a href="/register" class="px-6 py-2 bg-white text-indigo-600 hover:bg-gray-100 rounded-lg transition-colors font-semibold">
          Get Started
        </a>
      </div>
    </nav>

    <main class="container mx-auto px-6 py-20">
      <div class="text-center mb-20">
        <h2 class="text-6xl font-bold text-white mb-6">
          All Your Social Media<br />Stats in One Place
        </h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Connect TikTok, YouTube, Instagram, Twitch, and Kick to track your growth, engagement, and performance with beautiful analytics.
        </p>
        <a href="/register" class="inline-block px-8 py-4 bg-white text-indigo-600 hover:bg-gray-100 rounded-lg transition-colors font-bold text-lg shadow-xl">
          Start Free Today
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mt-20">
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-4">
            <line x1="12" x2="12" y1="20" y2="10"></line>
            <line x1="18" x2="18" y1="20" y2="4"></line>
            <line x1="6" x2="6" y1="20" y2="16"></line>
          </svg>
          <h3 class="text-xl font-bold mb-2">Real-Time Analytics</h3>
          <p class="text-white/80">Track your performance across all platforms in real-time.</p>
        </div>
        
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-4">
            <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          <h3 class="text-xl font-bold mb-2">Secure & Private</h3>
          <p class="text-white/80">Your data is encrypted and stored securely offline.</p>
        </div>
        
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-4">
            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
          </svg>
          <h3 class="text-xl font-bold mb-2">Lightning Fast</h3>
          <p class="text-white/80">Instant insights with our optimized dashboard.</p>
        </div>
        
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-4">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path>
            <path d="M2 12h20"></path>
          </svg>
          <h3 class="text-xl font-bold mb-2">5+ Platforms</h3>
          <p class="text-white/80">Connect all major social media platforms.</p>
        </div>
      </div>
    </main>
  </div>
</Layout>
