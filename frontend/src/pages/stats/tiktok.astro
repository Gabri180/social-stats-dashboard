---
// frontend/src/pages/stats/tiktok.astro
import MainLayout from '../../layouts/MainLayout.astro';
import Sidebar from '../../components/dashboard/Sidebar';
import Header from '../../components/layout/Header';
import StatsCardWrapper from '../../components/dashboard/StatsCardWrapper';
import LineChart from '../../components/charts/LineChart';
import BarChart from '../../components/charts/BarChart';
import PieChart from '../../components/charts/PieChart';
---

<MainLayout title="TikTok Stats">
  <div class="flex min-h-screen bg-gray-50 dark:bg-gray-900">
    <Sidebar client:load />
    <div class="flex-1 ml-64">
      <Header client:load />
      
      <main class="pt-20 p-8">
        <div class="mb-8">
          <div class="flex items-center gap-3 mb-2">
            <div class="text-4xl">ðŸŽµ</div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">TikTok Analytics</h1>
          </div>
          <p class="text-gray-600 dark:text-gray-400">Track your TikTok performance and growth</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <StatsCardWrapper
            client:load
            title="Followers"
            value="45.2K"
            change={15.3}
            icon="Users"
            color="bg-black"
          />
          <StatsCardWrapper
            client:load
            title="Total Views"
            value="1.2M"
            change={22.5}
            icon="Eye"
            color="bg-gray-800"
          />
          <StatsCardWrapper
            client:load
            title="Total Likes"
            value="89.4K"
            change={18.7}
            icon="Heart"
            color="bg-red-500"
          />
          <StatsCardWrapper
            client:load
            title="Shares"
            value="12.8K"
            change={-3.2}
            icon="Share2"
            color="bg-indigo-500"
          />
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Views Over Time</h2>
            <LineChart
              client:load
              data={[15000, 23000, 32000, 45000, 52000, 68000, 75000]}
              labels={['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun']}
              title="Views"
            />
          </div>

          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Engagement by Video</h2>
            <BarChart
              client:load
              data={[4500, 6200, 8900, 7500, 9200, 11000, 8700]}
              labels={['Video 1', 'Video 2', 'Video 3', 'Video 4', 'Video 5', 'Video 6', 'Video 7']}
              title="Engagement"
              color="rgb(239, 68, 68)"
            />
          </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Content Performance Distribution</h2>
          <PieChart
            client:load
            data={[35, 28, 22, 10, 5]}
            labels={['Dance Videos', 'Comedy', 'Tutorials', 'Vlogs', 'Other']}
            title="Content Types"
          />
        </div>
      </main>
    </div>
  </div>
</MainLayout>
