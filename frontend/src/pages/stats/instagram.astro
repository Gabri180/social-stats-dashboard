---
// frontend/src/pages/stats/instagram.astro
import MainLayout from '../../layouts/MainLayout.astro';
import Sidebar from '../../components/dashboard/Sidebar';
import Header from '../../components/layout/Header';
import StatsCard from '../../components/dashboard/StatsCard';
import LineChart from '../../components/charts/LineChart';
import { Users, Heart, MessageCircle, Bookmark } from 'lucide-react';
---

<MainLayout title="Instagram Stats">
  <div class="flex min-h-screen bg-gray-50 dark:bg-gray-900">
    <Sidebar client:load />
    <div class="flex-1 ml-64">
      <Header client:load />
      
      <main class="pt-20 p-8">
        <div class="mb-8">
          <div class="flex items-center gap-3 mb-2">
            <div class="text-4xl">ðŸ“·</div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Instagram Analytics</h1>
          </div>
          <p class="text-gray-600 dark:text-gray-400">Analyze your Instagram content performance</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <StatsCard
            client:load
            title="Followers"
            value="89.3K"
            change={11.2}
            icon={<Users className="text-white" size={24} />}
            color="bg-gradient-to-br from-purple-600 to-pink-600"
          />
          <StatsCard
            client:load
            title="Likes"
            value="456K"
            change={14.7}
            icon={<Heart className="text-white" size={24} />}
            color="bg-pink-500"
          />
          <StatsCard
            client:load
            title="Comments"
            value="23.4K"
            change={8.9}
            icon={<MessageCircle className="text-white" size={24} />}
            color="bg-purple-500"
          />
          <StatsCard
            client:load
            title="Saves"
            value="12.8K"
            change={19.3}
            icon={<Bookmark className="text-white" size={24} />}
            color="bg-indigo-500"
          />
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Engagement Rate</h2>
          <LineChart
            client:load
            data={[5.2, 6.1, 5.8, 6.5, 7.2, 6.9, 7.8]}
            labels={['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun']}
            title="Engagement %"
            color="rgb(168, 85, 247)"
          />
        </div>
      </main>
    </div>
  </div>
</MainLayout>
